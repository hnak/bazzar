{
  "name": "bazzar",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "deploy": "vue-cli-service build && firebase deploy"
  },
  "dependencies": {
    "buefy": "^0.7.0",
    "firebase": "^5.5.5",
    "firebaseui": "^3.4.1",
    "loom-js": "^1.29.1",
    "node-sass": "^4.9.4",
    "sass-loader": "^7.1.0",
    "vue": "^2.5.17",
    "vue-i18n": "^8.0.0",
    "vue-property-decorator": "^7.2.0",
    "vue-router": "^3.0.1",
    "vuelidate": "^0.7.4",
    "vuex": "^3.0.1",
    "web3": "^1.0.0-beta.36"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "@vue/cli-plugin-babel": "^3.0.5",
    "@vue/cli-plugin-eslint": "^3.0.5",
    "@vue/cli-service": "^3.0.5",
    "@vue/eslint-config-prettier": "^3.0.5",
    "vue-cli-plugin-i18n": "^0.5.1",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/recommended",
      "@vue/prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ]
    },
    "parserOptions": {
      "ecmaFeatures": {
        "legacyDecorators": true
      },
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
